private void BtnQuery_Click(object sender, EventArgs e)
        {
            if (String.IsNullOrEmpty(ucBizCdVsd.TEXT))
            {
                GlobalClass.MessageBox("Vui lòng chọn nghiệp vụ cần tra cứu");
                ucBizCdVsd.Focus();
                return;
            }

            if (String.IsNullOrEmpty(ucQueryReport1.RptNo))
            {
                GlobalClass.MessageBox("Vui lòng chọn mã báo cáo cần tra cứu");
                ucRptNo.Focus();
                return;
            }
            
            if(ucBizCdVsd.TEXT.StartsWith("31"))
            {
                ucQueryReport1.LoadDataDetail();
            }    
            else
            {
                string[] inArr = new string[3] { ucQueryReport1.RptNo, String.IsNullOrEmpty(ucUser.TEXT) ? "%" : ucUser.TEXT, GlobalClass.ConvertDTFormat(dtQuery, GlobalClass.DTFORMAT.ddMMyyyy) };
                ucQueryReport2.SetDetailParam(inArr);
                ucQueryReport2.LoadDataDetail();
            }
            
            return;
        }

